{
  "name": "@joaomelo/auth-mech",
  "version": "0.1.2",
  "description": "Complements Firebase auth with opinionated approaches to observation of auth state changes, treat email verification as default and fuse user data from auth with an arbitrary collection in Firestore.",
  "main": "lib/dist/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "webpack-dev-server --config demo/cfg/webpack.config.js",
    "lint": "eslint */src/**/*.js",
    "build": "rimraf lib/dist/* && webpack --config lib/cfg/webpack.config.js",
    "commit": "git add -A && git commit",
    "push": "git push && git push --tags",
    "pack": "npm run lint && npm run build && npm run commit",
    "bump:patch": "npm run pack && npm version patch && npm run push",
    "bump:minor": "npm run pack && npm version minor && npm run push",
    "bump:major": "npm run pack && npm version major && npm run push",
    "deploy": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joaomelo/auth-mech.git"
  },
  "keywords": [
    "authentication",
    "user",
    "firebase",
    "firestore",
    "firebase-auth"
  ],
  "author": "jo√£o melo",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/joaomelo/auth-mech/issues"
  },
  "homepage": "https://github.com/joaomelo/auth-mech#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "circular-dependency-plugin": "^5.2.0",
    "css-loader": "^3.5.3",
    "dotenv-webpack": "^1.8.0",
    "eslint": "^7.1.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "firebase": "^7.14.6",
    "html-webpack-plugin": "^4.3.0",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@joaomelo/bus": "^1.1.4"
  }
}